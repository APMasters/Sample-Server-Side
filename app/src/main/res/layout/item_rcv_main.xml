<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent"/>

        <TextView
            android:id="@+id/txtMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/imgCover"
            android:fontFamily="sans-serif"
            android:text="Music Title"
            android:textColor="@color/gray900"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMusic"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imgCover"
            android:fontFamily="sans-serif"
            android:text="Singer name"
            android:textColor="@color/gray800"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSinger"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imgCover"
            android:fontFamily="sans-serif"
            android:text="Album Name"
            android:textColor="@color/gray800"
            android:textSize="16sp"
            />

        <RatingBar
            android:id="@+id/rtb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/imgCover"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/rtb"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="112dp"
            android:background="@color/titles_light"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>